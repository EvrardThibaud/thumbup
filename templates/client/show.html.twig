{# templates/client/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Client #{{ client.id }}{% endblock %}

{% block body %}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">üë§ {{ client.name }}</h1>
    <div class="d-flex gap-2">
      <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_client_index') }}">‚Üê Back to list</a>
      <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_client_edit', {'id': client.id}) }}">‚úèÔ∏è Edit</a>
      <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Delete this client?');" class="m-0">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
        <button class="btn btn-sm btn-danger rounded-1">Delete</button>
      </form>
    </div>
  </div>

  <div class="card bg-dark border-0 p-3 mb-3">
    <div class="text-secondary small mb-2">client #{{ client.id }}</div>

    {% if client.channelUrl %}
      <div class="mb-3">
        <a class="link-light link-opacity-75-hover" href="{{ client.channelUrl }}" target="_blank">Channel link ‚ÜóÔ∏é</a>
      </div>
    {% endif %}

    <div class="row g-3">
        <div class="col-sm-6">
            <div class="text-secondary small">Due (delivered & unpaid)</div>
            <div class="fs-5">{{ (dueCents / 100)|number_format(2, ',', ' ') }} ‚Ç¨</div>
        </div>
        <div class="col-sm-6">
            <div class="text-secondary small">Paid (sum of paid orders)</div>
            <div class="fs-5">{{ (paidCents / 100)|number_format(2, ',', ' ') }} ‚Ç¨</div>
        </div>
    </div>
  </div>

 {# templates/client/show.html.twig #}
{% if linkedUser %}
  <div class="card bg-dark border-0 p-3 mt-3">
    <h2 class="h6 m-0 mb-2">üë§ Linked account</h2>
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <div class="fw-medium">{{ linkedUser.email }}</div>
      </div>
      <span class="badge text-bg-success rounded-1">Active</span>
    </div>
  </div>
{% endif %}

  {# ---- Invitations ---- #}
  <div class="card bg-dark border-0 p-3 mt-3">
    <div class="d-flex align-items-center justify-content-between mb-2">
      <h2 class="h6 m-0">üîó Invitations</h2>
      <form method="post" action="{{ path('app_invite_create', {'id': client.id}) }}" class="m-0">
        <button class="btn btn-sm btn-primary rounded-1">+ Create invite</button>
      </form>
    </div>

    {% set invites = client.invitations ?? [] %}
    {% set tz = app.user ? app.user.timezone : 'Europe/Paris' %}
    {% if invites is empty %}
      <div class="text-secondary small">No invitations yet.</div>
    {% else %}
      <div class="table-responsive">
        <table class="table table-dark table-sm align-middle mb-0">
          <thead class="small text-secondary">
          <tr>
            <th>Token</th><th>Link</th><th>Created</th><th>Expires</th><th>Used</th><th class="text-end">Actions</th>
          </tr>
          </thead>
          <tbody>
          {% for inv in invites %}
            {% set link = absolute_url(path('app_register', {'invite': inv.token})) %}
            <tr>
              <td class="text-truncate" style="max-width:24ch"><code>{{ inv.token }}</code></td>
              <td class="text-truncate" style="max-width:36ch">
                <a href="#"
                  class="link-light link-opacity-75-hover d-inline-block text-truncate"
                  style="max-width:36ch"
                  data-copy="{{ link }}"
                  title="Click to copy">
                  {{ link }}
                </a>
              </td>
              <td class="text-secondary small">{{ inv.createdAt|date('Y-m-d H:i', tz) }}</td>
              <td class="text-secondary small">{{ inv.expiresAt ? inv.expiresAt|date('Y-m-d H:i', tz) : '‚Äî' }}</td>
              <td>
                {% if inv.expiresAt and inv.expiresAt < date() %}
                  <span class="badge text-bg-secondary rounded-1">Expired</span>
                {% elseif inv.usedAt %}
                  <span class="badge text-bg-success rounded-1">Used</span>
                {% else %}
                  <span class="badge text-bg-warning rounded-1">Not used</span>
                {% endif %}
              </td>
              <td class="text-end">
                {% if not inv.usedAt %}
                  <form method="post" action="{{ path('app_invite_revoke', {'id': inv.id}) }}" class="d-inline m-0"
                        onsubmit="return confirm('Revoke this invite?');">
                    <button class="btn btn-sm btn-outline-light rounded-1">Revoke</button>
                  </form>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    {% endif %}
  </div>



  {# ---- Orders for this client (no filters, no CSV) ---- #}
  <div class="d-flex align-items-center justify-content-between mt-4 mb-2">
    <h2 class="h5 m-0">üßæ His orders</h2>
    <a class="btn btn-sm btn-outline-light rounded-1"
       href="{{ path('app_order_index', {'clientId': client.id}) }}">View in Orders ‚ÜóÔ∏é</a>
  </div>

  {# Prep tri #}
  {% set route = app.request.attributes.get('_route') %}
  {% set qs = app.request.query.all %}

  {% macro sortLink(label, field, currentSort, currentDir, route, qs, id) %}
    {%- set dir = (currentSort == field and currentDir == 'ASC') ? 'DESC' : 'ASC' -%}
    {%- set params = qs|merge({'sort': field, 'dir': dir, 'page': 1, 'id': id}) -%}
    <a class="link-light link-underline-opacity-0" href="{{ path(route, params) }}">
      {{ label }}
      {% if currentSort == field %}
        <span class="text-secondary">{{ currentDir == 'ASC' ? '‚ñ≤' : '‚ñº' }}</span>
      {% endif %}
    </a>
  {% endmacro %}
  {% import _self as S %}

  {# Showing X‚ÄìY of Z #}
  {% set start = total == 0 ? 0 : ((page - 1) * limit) + 1 %}
  {% set end = (page * limit) > total ? total : (page * limit) %}
  <p class="text-secondary small mb-2">
    Showing <strong>{{ start }}</strong>‚Äì<strong>{{ end }}</strong> of <strong>{{ total }}</strong>
  </p>

  <div class="card bg-dark border-0">
  <div class="table-responsive">
    <table class="table table-dark table-hover align-middle mb-0">
      <thead class="small text-secondary">
        <tr>
          <th>{{ S.sortLink('ID', 'id', sort, dir, route, qs, client.id) }}</th>
          <th>{{ S.sortLink('Title', 'title', sort, dir, route, qs, client.id) }}</th>
          <th style="width:28ch">Brief</th>
          <th class="text-nowrap">{{ S.sortLink('Price', 'price', sort, dir, route, qs, client.id) }}</th>
          <th>{{ S.sortLink('Status', 'status', sort, dir, route, qs, client.id) }}</th>
          <th>Paid</th>
          <th>{{ S.sortLink('Due', 'dueAt', sort, dir, route, qs, client.id) }}</th>
          <th>{{ S.sortLink('Updated', 'updatedAt', sort, dir, route, qs, client.id) }}</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {% for order in orders %}
        {% set s = order.status.value %}
        {% set statusLabelMap = {
          'created':  'Created',
          'refused':  'Refused',
          'canceled': 'Canceled',
          'accepted': is_granted('ROLE_ADMIN') ? 'To do' : 'Accepted',
          'doing':    'Doing',
          'delivered':'Delivered'
        } %}
        {% set statusColorMap = {
          'created':  'secondary',
          'refused':  'danger',
          'canceled': 'dark',
          'accepted': 'warning',
          'doing':    'info',
          'delivered':'primary'
        } %}
        {% set label = statusLabelMap[s] ?? s %}
        {% set color = statusColorMap[s] ?? 'secondary' %}
        {% set tz = app.user ? app.user.timezone : 'Europe/Paris' %}

        <tr>
          <td class="text-secondary">#{{ order.id }}</td>
          <td class="fw-medium">{{ order.title }}</td>
          <td class="text-secondary text-truncate">{{ order.brief }}</td>
          <td>{{ (order.price / 100)|number_format(2, ',', ' ') }} ‚Ç¨</td>
          <td><span class="badge text-bg-{{ color }} rounded-1">{{ label }}</span></td>
          <td>
            {% if order.paid %}
              <span class="badge text-bg-success rounded-1">Paid</span>
            {% else %}
              <span class="badge text-bg-warning rounded-1">Unpaid</span>
            {% endif %}
          </td>
          <td>{{ order.dueAt ? order.dueAt|date('Y-m-d H:i', tz) : '‚Äî' }}</td>
          <td class="text-secondary">{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i', tz) : '‚Äî' }}</td>
          <td class="text-end">
            {% set backUrl = path('app_client_show', {'id': client.id}) %}
            <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_order_show', {'id': order.id, 'back': backUrl}) }}">Open</a>
            <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_order_edit', {'id': order.id, 'back': backUrl}) }}">Edit</a>
          </td>
        </tr>
      {% else %}
        <tr><td colspan="9" class="text-secondary">No orders found.</td></tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>
  {# Pagination #}
  {% set pages = (total / limit)|round(0, 'ceil') %}
  {% if pages > 1 %}
    <nav class="mt-3">
      <ul class="pagination pagination-sm">
        {% set current = page %}
        {% set prev_qs = qs|merge({'page': current-1, 'id': client.id}) %}
        {% set next_qs = qs|merge({'page': current+1, 'id': client.id}) %}

        <li class="page-item {{ current <= 1 ? 'disabled' }}">
          <a class="page-link" href="{{ path(route, prev_qs) }}">&laquo;</a>
        </li>

        {% for p in 1..pages %}
          {% set p_qs = qs|merge({'page': p, 'id': client.id}) %}
          <li class="page-item {{ p == current ? 'active' }}">
            <a class="page-link" href="{{ path(route, p_qs) }}">{{ p }}</a>
          </li>
        {% endfor %}

        <li class="page-item {{ current >= pages ? 'disabled' }}">
          <a class="page-link" href="{{ path(route, next_qs) }}">&raquo;</a>
        </li>
      </ul>
    </nav>
  {% endif %}
{% endblock %}
