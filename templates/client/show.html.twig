{# templates/client/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Client #{{ client.id }}{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">üë§ {{ client.name }}</h1>
    <div class="d-flex gap-2">
      <a class="btn btn-sm btn-outline-light rounded-1"
         href="{{ path('app_client_index') }}">‚Üê Back to list</a>
      <a class="btn btn-sm btn-outline-light rounded-1"
         href="{{ path('app_client_edit', {'id': client.id}) }}">‚úèÔ∏è Edit</a>
      <form method="post"
            action="{{ path('app_client_delete', {'id': client.id}) }}"
            onsubmit="return confirm('Delete this client?');"
            class="m-0">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
        <button class="btn btn-sm btn-danger rounded-1">Delete</button>
      </form>
    </div>
  </div>

  {# On r√©cup√®re d'abord les flashs 'invite_link' pour le JS #}
  {% set inviteLinks = app.flashes('invite_link') %}

  {# Flash messages classiques (tous les autres) #}
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label }} small py-2 mb-2">
        {{ message }}
      </div>
    {% endfor %}
  {% endfor %}

  <div class="row g-3">
    {# LEFT: Profile / payment / linked user #}
    <div class="col-12 col-lg-6">
      <div class="card bg-dark border-secondary rounded-2">
        <div class="card-header border-secondary">
          <span class="fw-semibold">Profile</span>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4 text-secondary">Client ID</dt>
            <dd class="col-sm-8 text-secondary">#{{ client.id }}</dd>

            <dt class="col-sm-4 text-secondary">Name</dt>
            <dd class="col-sm-8 fw-medium">
              {{ client.name ?? '‚Äî' }}
            </dd>

            <dt class="col-sm-4 text-secondary">Channel</dt>
            <dd class="col-sm-8">
              {% if client.channelUrl %}
                <a class="link-light link-opacity-75-hover"
                   href="{{ client.channelUrl }}"
                   target="_blank"
                   rel="noopener noreferrer">
                  {{ client.channelUrl }}
                </a>
              {% else %}
                <span class="text-secondary">‚Äî</span>
              {% endif %}
            </dd>

            {% set due = dueCents is defined ? dueCents : 0 %}
            {% set paid = paidCents is defined ? paidCents : 0 %}

            <dt class="col-sm-4 text-secondary">Due</dt>
            <dd class="col-sm-8">
              <span class="badge text-bg-{{ due > 0 ? 'warning' : 'success' }} rounded-1">
                {{ (due / 100)|number_format(2, ',', ' ') }} ‚Ç¨
              </span>
              {% if due > 0 %}
                <span class="small text-secondary ms-2">
                  Delivered & unpaid orders
                </span>
              {% endif %}
            </dd>

            <dt class="col-sm-4 text-secondary">Paid total</dt>
            <dd class="col-sm-8">
              <span class="badge text-bg-light text-dark rounded-1">
                {{ (paid / 100)|number_format(2, ',', ' ') }} ‚Ç¨
              </span>
            </dd>

            <dt class="col-sm-4 text-secondary">Linked user</dt>
            <dd class="col-sm-8">
              {% if linkedUser %}
                <span class="badge text-bg-success rounded-1 me-2">Linked</span>
                <span class="small text-secondary">{{ linkedUser.email }}</span>
              {% else %}
                <span class="badge text-bg-secondary rounded-1">Unlinked</span>
              {% endif %}
            </dd>
          </dl>
        </div>
      </div>
    </div>

    {# RIGHT: Orders box + (optional) invite box #}
    <div class="col-12 col-lg-6">
      <div class="card bg-dark border-secondary rounded-2 mb-3">
        <div class="card-header border-secondary">
          <span class="fw-semibold">Orders</span>
        </div>
        <div class="card-body">
          <p class="text-secondary small mb-3">
            View all this client's orders in the main Orders list.
          </p>
          <a class="btn btn-sm btn-outline-light rounded-1"
             href="{{ path('app_order_index', {'clientId': client.id}) }}">
            View in Orders
          </a>
        </div>
      </div>

      {# Invitations only if no linked user #}
      {% if not linkedUser %}
        <div class="card bg-dark border-secondary rounded-2 mt-3">
          <div class="card-header border-secondary">
            <span class="fw-semibold">Invitations</span>
          </div>
          <div class="card-body">
            <p class="text-secondary small mb-3">
              Create an invite link to onboard this client to the portal.
            </p>

            <form method="post"
                  action="{{ path('app_invite_create', {'id': client.id}) }}"
                  class="m-0 mb-2"
                  data-turbo="false">
              <button class="btn btn-sm btn-primary rounded-1">+ Create invite</button>
            </form>

            {% if inviteLink %}
              <div class="d-flex flex-column gap-1 mt-2">
                <button type="button"
                        class="btn btn-sm btn-outline-light rounded-1 text-truncate"
                        id="copy-invite-btn"
                        data-link="{{ inviteLink }}">
                  {{ inviteLink }}
                </button>
                <small class="text-success" id="copy-feedback" hidden>
                  Copied to clipboard ‚úÖ
                </small>
              </div>
            {% else %}
              <p class="small text-secondary mb-0">
                No active invite link for this client yet.
              </p>
            {% endif %}
          </div>
        </div>
      {% endif %}



      
    </div>
  </div>
</div>

<script>
document.addEventListener('click', function (e) {
  const btn = e.target.closest('#copy-invite-btn');
  if (!btn) return;

  const link = btn.dataset.link;
  const feedback = document.getElementById('copy-feedback');

  if (navigator.clipboard && navigator.clipboard.writeText) {
    navigator.clipboard.writeText(link).then(() => {
      if (feedback) {
        feedback.hidden = false;
        setTimeout(() => {
          feedback.hidden = true;
        }, 2000);
      }
    }).catch(err => {
      console.error('Clipboard copy failed:', err);
      alert('Copy this link manually:\n' + link);
    });
  } else {
    alert('Copy this link manually:\n' + link);
  }
});
</script>


{% endblock %}
