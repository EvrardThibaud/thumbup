{# templates/_footer.html.twig #}
<footer class="border-top border-secondary mt-5 pt-3">
  <div class="container-xxl py-3 small text-secondary">
    <div class="row g-3">
      <div class="col-12 col-md-4">
        <div class="fw-semibold text-light mb-1">ThumbUp</div>
        <p class="mb-2">
          Internal dashboard to manage YouTube thumbnail orders, clients and payments.
        </p>
        <div class="d-flex flex-wrap gap-2">
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_dashboard') }}"
               class="link-secondary link-opacity-75-hover">
              Dashboard
            </a>
            <span>·</span>
            <a href="{{ path('app_order_index') }}"
               class="link-secondary link-opacity-75-hover">
              Orders
            </a>

            {% if is_granted('ROLE_ADMIN') %}
              <span>·</span>
              <a href="{{ path('app_client_index') }}"
                 class="link-secondary link-opacity-75-hover">
                Clients
              </a>
            {% elseif is_granted('ROLE_CLIENT') %}
              <span>·</span>
              <a href="{{ path('app_thumbnails_index') }}"
                 class="link-secondary link-opacity-75-hover">
                Thumbnails
              </a>
              <span>·</span>
              <a href="{{ path('app_payments_index') }}"
                 class="link-secondary link-opacity-75-hover">
                Payments
              </a>
            {% endif %}
          {% else %}
            <a href="{{ path('app_login') }}"
               class="link-secondary link-opacity-75-hover">
              Sign in
            </a>
            <a href="{{ path('app_register') }}"
               class="link-secondary link-opacity-75-hover">
              Register
            </a>
          {% endif %}
        </div>
      </div>

      <div class="col-6 col-md-4">
        <div class="fw-semibold text-light mb-1">Support</div>
        <ul class="list-unstyled mb-0">
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Contact
            </a>
          </li>
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Help center
            </a>
          </li>
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Status
            </a>
          </li>
        </ul>
      </div>

      <div class="col-6 col-md-4">
        <div class="fw-semibold text-light mb-1">Legal</div>
        <ul class="list-unstyled mb-0">
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Legal notice
            </a>
          </li>
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Privacy policy
            </a>
          </li>
          <li>
            <a href="#"
               class="link-secondary link-opacity-75-hover">
              Terms of use
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mt-3 pt-2 border-top border-secondary-subtle">
      <div class="text-secondary small mt-2 mt-md-0">
        © {{ "now"|date("Y") }} ThumbUp · All rights reserved
      </div>
      <div class="text-secondary small mt-1 mt-md-0">
        {% if is_granted('ROLE_ADMIN') %}
          Crafted with ❤️ for Graphic designer
        {% else %}
          Crafted with ❤️ for YouTube creators
        {% endif %}
      </div>
    </div>
  </div>
</footer>
