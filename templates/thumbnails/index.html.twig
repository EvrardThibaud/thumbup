{# templates/thumbnails/index.html.twig â€” shows FINAL thumbnails (Thumbnail entity) #}
{% extends 'base.html.twig' %}
{% block title %}Thumbnails{% endblock %}

{% block body %}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">ğŸ–¼ï¸ Thumbnails</h1>
  </div>

  {# Admin filter (clients). Clients cannot filter and only see their own. #}
  {% if not isClientOnly %}
    <form method="get" action="{{ path('app_thumbnails_index') }}" class="d-flex align-items-center gap-2 mb-3">
      <select name="client" class="form-select form-select-sm bg-dark text-light border-secondary"
              onchange="this.form.submit()">
        <option value="" {{ selectedClient is null ? 'selected':'' }}>All clients</option>
        {% for c in clients %}
          <option value="{{ c.id }}" {{ selectedClient and selectedClient.id == c.id ? 'selected':'' }}>{{ c.name }}</option>
        {% endfor %}
      </select>
      {% if selectedClient %}
        <a class="btn btn-sm btn-outline-secondary rounded-1" href="{{ path('app_thumbnails_index') }}">Reset</a>
      {% endif %}
    </form>
  {% endif %}

  {% if orders is empty %}
    <div class="text-secondary">No orders with thumbnails.</div>
  {% else %}
    {# Use a dedicated partial that renders order.thumbnails (not order.assets) #}
    {% include 'thumbnails/_orders_thumbnails.html.twig' with { orders: orders } %}
  {% endif %}

  <div class="d-flex justify-content-between align-items-center mt-3">
    {% if page > 1 %}
      <a class="btn btn-sm btn-outline-light rounded-1"
         href="{{ path('app_thumbnails_index', selectedClient ? {'page': page-1, 'client': selectedClient.id} : {'page': page-1}) }}">â† Previous</a>
    {% else %}
      <span></span>
    {% endif %}

    {% if hasMore %}
      <a class="btn btn-sm btn-outline-light rounded-1"
         href="{{ path('app_thumbnails_index', selectedClient ? {'page': page+1, 'client': selectedClient.id} : {'page': page+1}) }}">Next â†’</a>
    {% endif %}
  </div>
{% endblock %}
