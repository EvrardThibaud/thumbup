{% extends 'base.html.twig' %}
{% block title %}Dashboard{% endblock %}

{% block body %}
<h1 class="mb-4">Dashboard</h1>

<div class="row g-3 mb-4">
  <div class="col-md-4">
    <div class="card p-3">
      <div class="text-muted">Miniatures (mois)</div>
      <div class="h3 mb-0">{{ miniaturesMois }}</div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card p-3">
      <div class="text-muted">Temps semaine (min)</div>
      <div class="h3 mb-0">{{ minutesSemaine }}</div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card p-3">
      <div class="text-muted">CA estimé (livrés)</div>
      <div class="h3 mb-0">{{ caEuros|number_format(2, ',', ' ') }} €</div>
    </div>
  </div>
</div>

<div class="card p-3">
  <h2 class="h5">Miniatures par mois</h2>
  {{ render_chart(ordersByMonthChart) }}
</div>
{% endblock %}
