{# templates/account/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Account{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">üë§ Account</h1>
    <a href="{{ path('app_account_edit') }}" class="btn btn-sm btn-outline-light rounded-1">
      ‚úèÔ∏è Edit
    </a>
  </div>

  <div class="row g-3">
    <div class="col-12 col-lg-6">
      <div class="card bg-dark border-secondary rounded-2">
        <div class="card-header border-secondary">
          <span class="fw-semibold">Profile</span>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4 text-secondary">Username</dt>
            <dd class="col-sm-8">
              {% if user.client %}
                {{ user.client.name }}
              {% else %}
                <span class="text-secondary">‚Äî</span>
              {% endif %}
            </dd>

            <dt class="col-sm-4 text-secondary">Email</dt>
            <dd class="col-sm-8">{{ user.email }}</dd>

            <dt class="col-sm-4 text-secondary">Time zone</dt>
            <dd class="col-sm-8">
              {{ user.timezone ?? 'Europe/Paris' }}
            </dd>

            <dt class="col-sm-4 text-secondary">Channels</dt>
            <dd class="col-sm-8">
              {% if user.client and user.client.youtubeChannels|length > 0 %}
                <ul class="list-unstyled mb-0 small">
                  {% for ch in user.client.youtubeChannels %}
                    <li class="mb-1">
                      <span class="text-secondary">{{ loop.index }}.</span>
                      {% if ch.name %}
                        <span class="fw-semibold">{{ ch.name }}</span>
                      {% endif %}
                      <a class="link-light link-opacity-75-hover ms-1"
                         href="{{ ch.url }}"
                         target="_blank"
                         rel="noopener noreferrer">
                        {{ ch.url }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% else %}
                <span class="text-secondary">‚Äî</span>
              {% endif %}
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
