{# templates/account/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Account{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">ğŸ‘¤ Account</h1>
    <a href="{{ path('app_account_edit') }}" class="btn btn-sm btn-outline-light rounded-1">
      âœï¸ Edit
    </a>
  </div>

  <div class="row g-3">
    <div class="col-12 col-lg-6">
      <div class="card bg-dark border-secondary rounded-2">
        <div class="card-header border-secondary">
          <span class="fw-semibold">Profile</span>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4 text-secondary">Username</dt>
            <dd class="col-sm-8">
              {% if user.client %}
                {{ user.client.name }}
              {% else %}
                <span class="text-secondary">â€”</span>
              {% endif %}
            </dd>

            <dt class="col-sm-4 text-secondary">Email</dt>
            <dd class="col-sm-8">{{ user.email }}</dd>

            <dt class="col-sm-4 text-secondary">Time zone</dt>
            <dd class="col-sm-8">
              {{ user.timezone ?? 'Europe/Paris' }}
            </dd>

            <dt class="col-sm-4 text-secondary">Channel</dt>
            <dd class="col-sm-8">
              {% if user.client and user.client.channelUrl %}
                <a class="link-light link-opacity-75-hover"
                   href="{{ user.client.channelUrl }}"
                   target="_blank"
                   rel="noopener noreferrer">
                  {{ user.client.channelUrl }}
                </a>
              {% else %}
                <span class="text-secondary">â€”</span>
              {% endif %}
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
