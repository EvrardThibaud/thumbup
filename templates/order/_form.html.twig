{# templates/order/_form.html.twig â€” stacked fields, labels above inputs #}
{{ form_start(form, { attr: { class: 'vstack gap-3' } }) }}

  {{ form_row(form.title,  { label: 'Title' }) }}
  {{ form_row(form.client, { label: 'Client' }) }}
  {{ form_row(form.brief,  { label: 'Brief' }) }}
  {{ form_row(form.price,  { label: 'Price (cents)' }) }}
  {{ form_row(form.status, { label: 'Status' }) }}
  {{ form_row(form.dueAt,  { label: 'Due date' }) }}

  <div class="d-flex gap-2">
    <button class="btn btn-primary rounded-1">{{ button_label|default('Save') }}</button>
    {% if back_path is defined %}
      <a href="{{ back_path }}" class="btn btn-outline-light rounded-1">Cancel</a>
    {% endif %}
  </div>

{{ form_end(form) }}
