{% extends 'base.html.twig' %}
{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">ğŸ§¾ Order <span class="text-secondary">#{{ order.id }}</span></h1>
    <div class="d-flex gap-2">
      <a class="btn btn-sm btn-outline-light rounded-1" href="{{ back ?? path('app_order_index') }}">â† Back</a>
      <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_order_edit', {'id': order.id, 'back': app.request.uri}) }}">âœï¸ Edit</a>
    </div>
  </div>

{# Progress stepper #}
{% include 'order/_status_stepper.html.twig' with { order: order } %}


  {# â€”â€”â€” le reste de ta page (cards infos, time, etc.) reste identique â€”â€”â€” #}


  {% set status = order.status.value %}
  {% set label = {'todo':'To do','doing':'Doing','delivered':'Delivered','paid':'Paid'}[status] ?? status %}
  {% set color = {'todo':'secondary','doing':'info','delivered':'primary','paid':'success'}[status] ?? 'secondary' %}
{# Delivered thumbnails #}
<div class="card border-0 p-3 mb-3">
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h6 m-0">ğŸ–¼ Delivered thumbnails</h2>

    {% if is_granted('ROLE_ADMIN') %}
      <form class="d-flex gap-2" method="post" enctype="multipart/form-data"
            action="{{ path('app_order_asset_upload', { id: order.id, back: app.request.uri }) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('asset-upload' ~ order.id) }}">
        <input class="form-control form-control-sm"
              type="file"
              name="order_asset[file][]"
              accept="image/*"
              multiple
              required>
        <button class="btn btn-sm btn-primary rounded-1">Upload</button>
      </form>
    {% endif %}

  </div>

  {% if order.assets is empty %}
    <div class="text-secondary small">No thumbnails yet.</div>
  {% else %}
    <div class="row g-3">
      {% for a in order.assets %}
        <div class="col-6 col-md-3">
          <div class="bg-dark border rounded-1 p-2 h-100 d-flex flex-column">
            <a href="{{ asset('uploads/order-assets/' ~ a.fileName) }}" target="_blank" class="mb-2">
              <img src="{{ asset('uploads/order-assets/' ~ a.fileName) | imagine_filter('thumb_320x180') }}"
                   alt="Thumbnail {{ loop.index }}"
                   class="img-fluid rounded-1"
                   loading="lazy"
                   style="aspect-ratio: 16/9; object-fit: cover;">
            </a>
            <div class="small text-secondary mb-2">{{ (a.fileSize/1024)|number_format(0, ',', ' ') }} KB</div>

            <div class="mt-auto d-flex gap-2">
              <a class="btn btn-sm btn-outline-light rounded-1"
                 href="{{ path('app_order_asset_download', { id: a.id }) }}">Download</a>

              {% if is_granted('ROLE_ADMIN') %}
                <form method="post"
                      action="{{ path('app_order_asset_delete', { id: a.id, back: app.request.uri }) }}"
                      onsubmit="return confirm('Delete this file?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('asset-delete' ~ a.id) }}">
                  <button class="btn btn-sm btn-outline-danger rounded-1">Delete</button>
                </form>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

  <div class="card border-0 p-3 mb-3">
    <div class="row g-3">
      <div class="col-md-6">
        <div class="small text-secondary mb-1">Title</div>
        <div class="fw-medium">{{ order.title }}</div>
      </div>
      <div class="col-md-3">
        <div class="small text-secondary mb-1">Client</div>
        <div>{{ order.client ? order.client.name : 'â€”' }}</div>
      </div>
      <div class="col-md-6">
        <div class="small text-secondary mb-1 ">Brief</div>
        <div class="text-secondary" style="white-space: pre-wrap">{{ order.brief }}</div>
      </div>
      <div class="col-md-2">
        <div class="small text-secondary mb-1">Price</div>
        <div>{{ (order.price / 100)|number_format(2, ',', ' ') }} â‚¬</div>
      </div>
      <div class="col-md-2">
        <div class="small text-secondary mb-1">Due</div>
        <div>{{ order.dueAt ? order.dueAt|date('Y-m-d H:i') : 'â€”' }}</div>
      </div>
      <div class="col-md-2">
        <div class="small text-secondary mb-1">Updated</div>
        <div>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i') : 'â€”' }}</div>
      </div>
    </div>
  </div>

  <div class="card border-0 p-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="h6 m-0">â± Time logged</h2>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-sm btn-primary rounded-1" href="{{ path('app_time_entry_new', {'orderId': order.id}) }}">+ Add time</a>
        {% endif %}
    </div>

    <p class="text-secondary mb-2">
      Total: <strong class="text-light">{{ order.getTotalMinutes() }} min</strong> ({{ order.getTotalHours() }} h)
    </p>

    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0">
        <thead class="small text-secondary">
          <tr>
            <th>Date</th>
            <th>Minutes</th>
            <th>Note</th>
          </tr>
        </thead>
        <tbody>
          {% for t in order.timeEntries %}
            <tr>
              <td>{{ t.createdAt ? t.createdAt|date('Y-m-d H:i') : 'â€”' }}</td>
              <td>{{ t.minutes }}</td>
              <td class="text-secondary">{{ t.note }}</td>
            </tr>
          {% else %}
            <tr><td colspan="3" class="text-secondary">No time entries yet.</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
