{% set thumbs = order.thumbnails %}
<div class="card bg-dark border-secondary rounded-2 h-100">
  <div class="card-header border-secondary d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
    <span class="fw-semibold text-nowrap">Final thumbnails</span>

    {% if is_granted('ROLE_ADMIN') %}
      <form class="d-flex flex-column flex-sm-row gap-2 w-100 w-md-auto"
            method="post"
            enctype="multipart/form-data"
            action="{{ path('app_thumbnail_upload', { id: order.id, back: app.request.uri }) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('thumb-upload' ~ order.id) }}">

        <input class="form-control form-control-sm bg-dark text-light border-secondary w-100"
               type="file"
               name="thumb_files[]"
               accept="image/png,image/jpeg,image/webp"
               multiple
               required>

        <button class="btn btn-sm btn-primary rounded-1 flex-shrink-0 text-nowrap">
          Upload
        </button>
      </form>
    {% endif %}
  </div>

  <div class="card-body">
    {% if order.thumbnails is empty %}
      <p class="text-secondary small mb-0">No thumbnails yet.</p>
    {% else %}
      <div class="row g-2">
        {% for thumb in order.thumbnails %}
          <div class="col-6 col-md-4 col-lg-3">
            <div class="card bg-dark border-secondary h-100">
              <a href="{{ vich_uploader_asset(thumb, 'file') }}"
                 target="_blank"
                 rel="noopener noreferrer">
                <img
                  src="{{ vich_uploader_asset(thumb, 'file') }}"
                  class="card-img-top img-fluid"
                  alt="Thumbnail #{{ loop.index }}"
                >
              </a>
              <div class="card-body p-2">
                <div class="d-flex justify-content-center align-items-center flex-wrap gap-2">
                  <a class="btn btn-sm btn-outline-light rounded-1 d-flex align-items-center justify-content-center text-nowrap"
                     href="{{ vich_uploader_asset(thumb, 'file') }}"
                     download>
                    Download
                  </a>

                  {% if is_granted('ROLE_ADMIN') %}
                    <form method="post"
                          action="{{ path('app_thumbnail_delete', { id: thumb.id, back: app.request.uri }) }}"
                          onsubmit="return confirm('Delete this thumbnail?');"
                          class="m-0 d-flex">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete-thumb' ~ thumb.id) }}">
                      <button class="btn btn-sm btn-danger rounded-1 d-flex align-items-center justify-content-center text-nowrap"
                              type="submit">
                        Delete
                      </button>
                    </form>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>
