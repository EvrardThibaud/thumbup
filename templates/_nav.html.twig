{# templates/_nav.html.twig #}
<nav class="navbar navbar-expand-lg navbar-dark bg-body-tertiary border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand fw-semibold" href="{{ path('admin_home') }}">üëç ThumbUp</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <div class="navbar-nav me-auto">
        {# ADMIN #}
        {% if is_granted('ROLE_ADMIN') %}
          <a class="nav-link" href="{{ path('app_dashboard') }}">Dashboard</a>
          <a class="nav-link" href="{{ path('app_client_index') }}">Clients</a>
          <a class="nav-link" href="{{ path('app_order_index') }}">Orders</a>
          <a class="nav-link" href="{{ path('app_thumbnails_index') }}">Thumbnails</a>
          <a class="nav-link" href="{{ path('app_time_entry_index') }}">Time</a>
          <a class="nav-link" href="{{ path('app_user_index') }}">Users</a>
        {% endif %}

        {# CLIENT (non-admin) #}
        {% if is_granted('ROLE_CLIENT') and not is_granted('ROLE_ADMIN') %}
          <a class="nav-link" href="{{ path('app_dashboard') }}">Dashboard</a>
          <a class="nav-link" href="{{ path('app_order_index') }}">My orders</a>
          {% if app.user and app.user.client %}
            <a class="nav-link" href="{{ path('app_client_show', {'id': app.user.client.id}) }}">My profile</a>
            <a class="nav-link" href="{{ path('app_thumbnails_index') }}">Thumbnails</a>
            <a class="nav-link" href="{{ path('app_payments_index') }}">Payments</a>
          {% endif %}
        {% endif %}
      </div>

      <div class="d-flex align-items-center">
        {% if app.user %}
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-light rounded-1 d-flex align-items-center gap-2"
                    type="button" id="accountMenu" data-bs-toggle="dropdown" aria-expanded="false">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="opacity-75">
                <path d="M12 12c2.761 0 5-2.686 5-6s-2.239-6-5-6-5 2.686-5 6 2.239 6 5 6zm0 2c-4.337 0-8 2.239-8 5v3h16v-3c0-2.761-3.663-5-8-5z"/>
              </svg>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="accountMenu">
              <li class="px-3 py-2 small">
                <div class="fw-semibold">{{ app.user.email }}</div>
                {% if app.user.roles is defined %}
                  <div class="text-secondary">
                    {% for r in app.user.roles %}
                      <span class="badge text-bg-dark border">{{ r }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
              </li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_account') }}">Account</a></li>
              <li>
                <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Logout</a>
              </li>
            </ul>
          </div>
        {% else %}
          <a class="btn btn-sm btn-primary rounded-1 me-2" href="{{ path('app_login') }}">Login</a>
          <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_register') }}">Register</a>
        {% endif %}
      </div>
    </div>
  </div>
</nav>
