{# templates/user/edit.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Edit user{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 m-0">üë§ Edit user</h1>
    <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_user_index') }}">‚Üê Back</a>
  </div>

  {# Flash messages #}
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label }} small py-2 mb-2">
        {{ message }}
      </div>
    {% endfor %}
  {% endfor %}

  {{ form_start(form, {
    attr: {
      class: 'vstack gap-3',
      'data-turbo': 'false'
    }
  }) }}

  <div class="row g-3">
    <div class="col-12 col-lg-6">
      <div class="card bg-dark border-secondary rounded-2">
        <div class="card-header border-secondary">
          <span class="fw-semibold">Profile</span>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label small mb-1">Email</label>
            {{ form_widget(form.email, {
              attr: form.email.vars.attr|merge({
                class: 'form-control form-control-sm bg-dark text-white border-secondary'
              })
            }) }}
            {{ form_errors(form.email) }}
          </div>

          <div class="mb-3">
            <label class="form-label small mb-1">Linked client</label>
            {{ form_widget(form.client, {
              attr: form.client.vars.attr|merge({
                class: 'text-white border-secondary'
              })
            }) }}
            <div class="form-text text-secondary small">
              Optional: attach this user to an existing client.
            </div>
            {% if form.client.vars.errors|length %}
                <div class="alert alert-danger small py-1 px-2 mt-1 mb-0 rounded-1">
                {{ form_errors(form.client) }}
              </div>
            {% endif %}
          </div>

          <div>
            <label class="form-label small mb-1">Roles</label>
            <div class="form-text text-secondary small mb-1">
              Choose the permissions for this user.
            </div>

            {% for choice in form.roles %}
              <div class="form-check mb-1">
                {{ form_widget(choice, {
                  attr: {
                    class: 'form-check-input'
                  }
                }) }}
                {{ form_label(choice, null, {
                  label_attr: {
                    class: 'form-check-label small'
                  }
                }) }}
              </div>
            {% endfor %}

            {{ form_errors(form.roles) }}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex gap-2 pt-3">
    <button class="btn btn-primary btn-sm rounded-1">
      Save user
    </button>
    <a href="{{ path('app_user_index') }}" class="btn btn-outline-light btn-sm rounded-1">
      Cancel
    </a>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}
