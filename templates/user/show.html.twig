{% extends 'base.html.twig' %}
{% block title %}User #{{ user.id }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 m-0">👤 User <span class="text-secondary">#{{ user.id }}</span></h1>
  <div class="d-flex gap-2">
    <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_user_index') }}">← Back</a>
    <a class="btn btn-sm btn-outline-light rounded-1" href="{{ path('app_user_edit', {id: user.id, back: app.request.uri}) }}">✏️ Edit</a>
  </div>
</div>

<div class="card border-0 p-3">
  <div class="row g-3">
    <div class="col-md-6">
      <div class="small text-secondary mb-1">Email</div>
      <div class="fw-medium">{{ user.email }}</div>
    </div>
    <div class="col-md-6">
      <div class="small text-secondary mb-1">Roles</div>
      <div>
        {% for r in user.roles %}
            <span class="badge text-bg-{{ r == 'ROLE_ADMIN' ? 'primary' : (r == 'ROLE_CLIENT' ? 'success' : 'secondary') }} rounded-1">{{ r }}</span>
        {% endfor %}
      </div>
    </div>
    <div class="col-md-6">
      <div class="small text-secondary mb-1">Linked client</div>
      <div>
        {% if user.client %}
          <a class="link-light link-opacity-75-hover" href="{{ path('app_client_show', {id: user.client.id}) }}">{{ user.client.name }}</a>
        {% else %}—{% endif %}
      </div>
    </div>
    <div class="col-md-6">
      <div class="small text-secondary mb-1">Created</div>
      <div class="text-secondary">{{ user.createdAt|date('Y-m-d H:i') }}</div>
    </div>
  </div>
</div>
{% endblock %}
