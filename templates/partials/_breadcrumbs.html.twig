{# templates/partials/_breadcrumbs.html.twig #}
{% set items = crumbs ?? [] %}
{% if items and items|length > 1 %}
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb small mb-0">
      {% for it in items %}
        {% if it.url %}
          <li class="breadcrumb-item"><a class="link-light link-underline-opacity-0" href="{{ it.url }}">{{ it.label }}</a></li>
        {% else %}
          <li class="breadcrumb-item active text-secondary" aria-current="page">{{ it.label }}</li>
        {% endif %}
      {% endfor %}
    </ol>
  </nav>
{% endif %}
